<?xml version="1.0"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" version="2.5" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>Archetype Created Web Application</display-name>
  <listener> 
  	<listener-class>de.ustu.ims.reiter.treeanno.ContextListener</listener-class>
  </listener>
  <servlet>
  	<servlet-name>ControllerServlet</servlet-name>
  	<display-name>ControllerServlet</display-name>
  	<description></description>
  	<servlet-class>de.ustu.ims.reiter.treeanno.ControllerServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>UserHandling</servlet-name>
  	<display-name>UserHandling</display-name>
  	<description></description>
  	<servlet-class>de.ustu.ims.reiter.treeanno.UserHandling</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ControllerServlet</servlet-name>
  	<url-pattern>/ControllerServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>UserHandling</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
   <welcome-file-list>
   	<welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/treeanno</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref></web-app>


