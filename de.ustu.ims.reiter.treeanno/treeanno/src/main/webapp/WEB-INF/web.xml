<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>Archetype Created Web Application</display-name>
  <listener>
    <listener-class>de.ustu.ims.reiter.treeanno.ContextListener</listener-class>
  </listener>
  <servlet>
    <description></description>
    <display-name>ControllerServlet</display-name>
    <servlet-name>ControllerServlet</servlet-name>
    <servlet-class>de.ustu.ims.reiter.treeanno.ControllerServlet</servlet-class>
  </servlet>
  <servlet>
    <description></description>
    <display-name>UserHandling</display-name>
    <servlet-name>UserHandling</servlet-name>
    <servlet-class>de.ustu.ims.reiter.treeanno.UserHandling</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControllerServlet</servlet-name>
    <url-pattern>/ControllerServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserHandling</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/treeanno</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <servlet>
    <description></description>
    <display-name>ProjectHandling</display-name>
    <servlet-name>ProjectHandling</servlet-name>
    <servlet-class>de.ustu.ims.reiter.treeanno.ProjectHandling</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProjectHandling</servlet-name>
    <url-pattern>/ProjectHandling</url-pattern>
  </servlet-mapping>
</web-app>